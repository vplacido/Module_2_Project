<h1>Welcome to Settings <%= @user.username %></h1>

<h2>Here is Info about <%= @user.username %></h2>
<%= link_to "#{@user.username}'s Settings", edit_user_path(@user) %>

<h3> My Listings</h3>
<% @listings.each do |l| %>
    <% if l.user_id == session[:user_id] %>
        <%= link_to l.title, listing_path(l) %>
    <% end %>
<% end %>

<h3> My Services</h3>
<% @services.each do |s| %>
    <% if s.seller_id == session[:user_id] %>
        <%= link_to s.title, service_path(s) %>
    <% end %>
<% end %><br><br>

<div>
    <%= link_to "Go back to homepage", homepage_path %>
</div>

