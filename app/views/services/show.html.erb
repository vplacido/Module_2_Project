<h1> Detail page </h1>

<h3>Title: <%= @service.title %></h3>

<h3>Description: <%= @service.description %></h3>

<h3>Time Frame: <%= @service.time_frame %></h3>

<h3>Price: <%= @service.price %></h3>




<%= link_to "Edit your service", edit_service_path %>
<%= link_to "List of services", services_path %>

<%= form_tag(service_path(@service), method: :delete) do %>
  <div>
    <%= submit_tag 'Remove this service' %>
  </div>
<% end %>