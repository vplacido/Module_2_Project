<h1> Detail page </h1>

<% @service.categories.each do |c| %>
  <%= link_to c.name, category_path(c) %>
  <br>
<% end %>

<h3>Title: <%= @service.title %></h3>

<h3>Description: <%= @service.description %></h3>

<h3>Time Frame: <%= @service.time_frame %></h3>

<h3>Price: <%= @service.price %></h3>


<% if session[:user_id] != @service.seller_id %>
  <% if session[:user_id] == nil %>
    <%= link_to '<button type="button">Purchase Service</button>'.html_safe, login_path %>
  <% else %>
    <%= link_to '<button type="button">Purchase Service</button>'.html_safe, homepage_path %>
  <% end %>
<% end %>
<% if session[:user_id] == @service.seller_id %>
  <%= link_to '<button type="button">Edit your service</button>'.html_safe, edit_service_path %>
<% end %>
<%= link_to '<button type="button">List of services</button>'.html_safe, services_path %>
<%= link_to '<button type="button">Create a new review</button>'.html_safe, new_review_path%>

<h3><%= link_to "Homepage", homepage_path %></h3>