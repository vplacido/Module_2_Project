<%= form_for @service do |s| %>
    <h5>Category <%= s.collection_select(:category_ids, Category.all, :id, :name) %></h5>
    <%= s.label :title %>
    <%= s.text_field :title %>
    <br>
    <%= s.label :description %>
    <%= s.text_field :description %>
    <br>
    <%= s.label :time_frame %>
    <%= s.text_field :time_frame %>
    <br>
    <%= s.label :price %>
    <%= s.number_field :price, step: :any %>
    <br>
    <%= s.submit %>
<% end %>
