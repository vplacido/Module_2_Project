<h1>Create a New User</h1>

<%= form_for @user do |u| %>
    <%= u.label :name, "Name: " %>
    <%= u.text_field :name %>

    <%= u.label :username, "Userame: " %>
    <%= u.text_field :username %>

    <%= u.label :password, "Password: " %>
    <%= u.password_field :password %>

    <%= u.label :password_confirmation %>
    <%= u.password_field :password_confirmation %>

    <%= u.label :profession, "Profession: " %>
    <%= u.text_field :profession %>

    <%= u.label :email, "Email: " %>
    <%= u.text_field :email %>

    <%= u.submit "Create User" %>
<% end %>
