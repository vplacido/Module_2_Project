

<%= form_for @review do |r|%>
    <%= r.label :description %>
    <%= r.text_field :description %>
    <br>
    <%= r.label :rating %>
    <%= r.number_field :rating, step: :any %>
    <br>
    <h6>Service <%= r.collection_select(:service, Service.selectAll(session[:user_id]), :id, :title) %></h6>
    <br>
    <%= r.submit %>
<% end %>
