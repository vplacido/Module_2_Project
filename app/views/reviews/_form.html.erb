<%= form_for @review do |r|%>
    <%= r.label :description %>
    <%= r.text_field :description %>
    <br>
    <%= r.label :rating %>
    <%= r.number_field :rating, step: :any %>
    <br>
    <%= r.collection_select(:service, Service.selectAllExcept(session[:user_id]), :id, :title) %>
    <%#= r.collection_select(:service, Service.all, :id, :title) %>
    <%= r.submit %>
<% end %>
